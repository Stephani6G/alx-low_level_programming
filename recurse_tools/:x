#include "main.h"
#include <stdio.h>
/**
 * _sqrt_recursion - Function that give natural square root of a number
 *
 * @n: number to find root square.
 * Return: natural square root of a number.
 *
 */
int _sqrt_recursion(int n)
{
	if (n < 0)
	{
		return (-1);
	}
	if (n == 0)
	{
		return (0);
	}
	if (n == 1)
	{
		return (1);
	}
	else
	{
		return (root_square(2, n));
	}
}
